---
type Props = {
  class?: string;
  date: Date;
};

const { class: className, date } = Astro.props;
---

<time class={className} datetime={date.toISOString()}>
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
      timeZone: 'UTC',
    })
  }
</time>
