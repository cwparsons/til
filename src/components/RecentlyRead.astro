---
import list from '@/content/recently-read/list.yml';

type Props = {
  showTop?: number;
};

const { showTop = 5 } = Astro.props;
---

<aside class="aside">
  <h2 class="heading">Recently read</h2>

  <ul class="list">
    {
      list.slice(0, showTop).map((item) => (
        <li>
          <a href={item.url}>{item.title ?? item.url}</a>
        </li>
      ))
    }
  </ul>
</aside>

<style>
  .aside {
    background-color: rgb(var(--background-accent-color));
    border-radius: 0.5rem;
    margin-block: clamp(1rem, 2.5vw, 2rem);
    margin-inline: calc(-1 * clamp(1rem, 2.5vw, 2rem));
    padding: clamp(1rem, 2.5vw, 2rem);

    @media (min-width: 48rem) {
      display: grid;
      grid-template-columns: 8rem 1fr;
      column-gap: 4rem;
    }
  }

  .heading {
    font-size: var(--font-size-base);
    font-weight: 600;
    margin-block-start: 0;

    @media (min-width: 48rem) {
      font-weight: 400;
    }
  }

  .list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    list-style-type: none;
    margin-block: 0;
    padding-inline-start: 0;
  }
</style>
